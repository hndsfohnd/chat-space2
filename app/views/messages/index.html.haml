.header
.contents
  = render partial: '/shared/leftgroup' 

  .contents__main
    .contents__main1 
      .contents__main1--list=@group.name  
      .contents__main1__main2

      =link_to "Edit" , edit_group_path(@group) , class: "contents__main1__main3"
    .contents__main1--member
      - @group.users.each do |user|
        = user.name 

    .contents__bottom
      = render partial: 'message', collection: @messages
      
      
    .contents__input
      .contents__input2
        = form_for [@group, @message] do |f|
          = f.text_field :content, class: 'contents__input--text', placeholder: 'type a message'
          = f.label :image, class: 'contents__input--label' do
            = fa_icon 'picture-o', class: 'contents__input--label2'
            = f.file_field :image, class: 'upload-icon'
          = f.submit 'Send', class: 'contents__input--sent'
